{% block content %}
{% if reason is not defined %}{# Some modules define reason in error states #}
{% for post in posts.paginated %}
{% include "feathers" ~ DIR ~ post.feather ~ ".twig" %}
{% else %}
<div class="ribbon">
<h3 class="ribbon">{{ "No posts" | translate }}</h3>
</div>
{% endfor %}
{% endif %}
{% endblock %}
