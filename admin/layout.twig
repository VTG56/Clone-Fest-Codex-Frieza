<!DOCTYPE html>
<html lang="{{ site.locale | split('_') | first }}">
<head>
<meta charset="UTF-8">
<meta name="robots" content="noindex">
<meta name="viewport" content="initial-scale = 1.0">
<title>{{ site.name }}: {% block title %}{{ title }}{% endblock %}</title>
<!-- Styles -->
<link rel="shortcut icon" href="{{ site.chyrp_url }}/favicon.ico">
<link rel="mask-icon" href="{{ site.chyrp_url }}/favicon.svg" color="#4f4f4f">
<link rel="stylesheet" href="{{ site.chyrp_url }}/admin/layout.css" type="text/css" media="all">
<!-- JavaScripts -->
<script src="{{ site.chyrp_url }}/includes/common.js" type="text/javascript" charset="utf-8"></script>
<script src="{{ site.chyrp_url }}/admin/admin.js.php?action={{ route.action }}" type="text/javascript" charset="utf-8"></script>
{{ trigger.call("admin_head") }}
</head>
<body>
<div id="header" role="banner">
<h1><a href="{{ site.url }}">{{ site.name }}</a></h1>
<ul id="navigation" role="menubar">
{% block navigation %}
{% for action, nav in navigation %}
{% if nav.show %}
<li role="presentation" class="{{ action }}{{ nav.selected | selected(true) }}"{{ nav.attributes is defined ? nav.attributes : "" }}>
<a role="menuitem" href="{{ admin_url(action) }}">{{ nav.title }}</a>
</li>
{% endif %}
{% endfor %}
{% endblock %}
</ul>
</div>
<ul id="sub_nav" role="menubar" class="{{ route.action }}_nav ">
{% block subnav %}
{% if subnav[route.action] is defined %}
{% for action, nav in subnav[route.action] %}
{% if nav.show %}
<li role="presentation" class="{{ action }}{{ nav.selected is defined ? route.action | selected(nav.selected, action) : route.action | selected(action) }}"{{ nav.attributes is defined ? nav.attributes : "" }}>
<a role="menuitem" href="{{ admin_url(action) }}">{{ nav.title }}</a>
</li>
{% endif %}
{% endfor %}
{% endif %}
{% endblock %}
</ul>
<div id="content" role="main">
{% for notice in flash.notices %}
<p role="alert" class="flash notice">{{ notice }}</p>
{% endfor %}
{% for warning in flash.warnings %}
<p role="alert" class="flash warning">{{ warning }}</p>
{% endfor %}
{% for message in flash.messages %}
<p role="alert" class="flash message">{{ message }}</p>
{% endfor %}
{% block content %}{% endblock %}
</div>
<div id="footer" role="contentinfo">
<img class="logo" src="{{ site.chyrp_url }}/favicon.svg" alt="{{ 'Chyrp loves you.' | translate }}">
<small class="metadata">{{ "Chyrp Lite &ldquo;%s&rdquo;" | translate | format(codename) }}</small>
<a id="logout" class="button" href="{{ admin_url('logout') }}">{{ "Log out" | translate }}</a>
</div>
</body>
</html>