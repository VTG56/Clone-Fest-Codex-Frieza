{% extends "layout.twig" %}

{% block title %}{{ "Write" | translate }}{% endblock %}

{% block content %}
<form id="write_form" class="{{ feather.safename | fix(true) }}" action="{{ admin_url('add_post') }}" method="post" accept-charset="UTF-8" enctype="multipart/form-data">
<fieldset>
{% include "partials" ~ DIR ~ "post_fields.twig" %}
<input type="hidden" name="feather" value="{{ feather.safename | fix(true) }}" id="feather">
<input type="hidden" name="hash" value="{{ ip | token }}" id="hash">
</fieldset>
</form>
{% endblock %}
