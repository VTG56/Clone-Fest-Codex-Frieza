{% extends "layout.twig" %}

{% block title %}{{ "Manage Pages" | translate }}{% endblock %}

{% block content %}
<form class="filters" action="index.php" method="get" accept-charset="UTF-8">
<fieldset>
<input type="hidden" name="action" value="manage_pages">
<div role="search" class="filter_item">
<h3>
{{ "Search&hellip;" | translate }}
<a href="{{ admin_url('help', {'id': 'filtering_results'}) }}" target="_blank" class="help emblem"><img src="{{ site.chyrp_url }}/admin/images/icons/help.svg" alt="help"></a>
</h3>
<input class="text filter_text" type="text" name="query" value="{{ GET.query | fix(true) }}" id="query">
<button type="submit">{{ "Search" | translate }}</button>
</div>
</fieldset>
</form>
<h2>{{ GET.query is not empty ? "Search Results" | translate : "Pages" | translate }}</h2>
<table>
<thead>
<tr class="head">
<th class="page_title">{{ "Title" | translate }}</th>
<th class="page_created">{{ "Created" | translate }}</th>
<th class="page_updated">{{ "Last Updated" | translate }}</th>
<th class="page_public">{{ "Public?" | translate }}</th>
<th class="page_show">{{ "Listed?" | translate }}</th>
<th class="page_author">{{ "Author" | translate }}</th>
{{ trigger.call("manage_pages_column_header") }}
<th class="controls" colspan="2">{{ "Controls" | translate }}</th>
</tr>
</thead>
<tbody>
{% for page in pages.paginated %}
<tr id="page_{{ page.id }}" class="page">
<td class="page_title main">
<a href="{{ page.url() }}">{{ page.title | oneof("[Untitled]" | translate) | truncate(40, "&hellip;", true) }}</a>
</td>
<td class="page_created">
{{ page.created_at | strftimeformat }}
</td>
<td class="page_updated">
{% if page.updated %}{{ page.updated_at | strftimeformat }}{% else %}<span class="sub">{{ "never" | translate }}</span>{% endif %}
</td>
<td class="page_public">
{% if page.public %}<img class="emblem" src="{{ site.chyrp_url }}/admin/images/icons/success.svg" alt="{{ 'yes' | translate }}">
{% else %}
&nbsp;
{% endif %}
</td>
<td class="page_show">
{% if page.show_in_list %}<img class="emblem" src="{{ site.chyrp_url }}/admin/images/icons/success.svg" alt="{{ 'yes' | translate }}">
{% else %}
&nbsp;
{% endif %}
</td>
<td class="page_author">
{{ page.author.nick is defined ? page.author.nick : "" }}
</td>
{{ trigger.call("manage_pages_column", page) }}
{% if page.editable() or page.deletable() %}
{% if page.editable() %}
<td class="controls"{{ not page.deletable() ? ' colspan="2"' : '' }}>
{{ page.edit_link('<img src="' ~ site.chyrp_url ~ '/admin/images/icons/edit.svg" alt="' ~ ('edit' | translate) ~ '">') }}
</td>
{% endif %}
{% if page.deletable() %}
<td class="controls"{{ not page.editable() ? ' colspan="2"' : '' }}>
{{ page.delete_link('<img src="' ~ site.chyrp_url ~ '/admin/images/icons/delete.svg" alt="' ~ ('delete' | translate) ~ '">') }}
</td>
{% endif %}
{% else %}
<td class="controls" colspan="2">&nbsp;</td>
{% endif %}
</tr>
{% else %}
<tr>
<td class="placeholder"><span class="sub">{{ "(none)" | translate }}</span></td>
</tr>
{% endfor %}
</tbody>
</table>
{% if pages.paginated is not empty and pages.pages > 1 %}
<div class="pagination">
<span class="pages">{{ "Page %d of %s" | translate | format(pages.page, pages.final_link(pages.pages)) }}</span>
{{ pages.prev_link }}
{{ pages.next_link }}
</div>
{% endif %}
{% endblock %}
