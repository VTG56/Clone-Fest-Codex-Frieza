{% extends "layout.twig" %}

{% block title %}{{ "Edit Group &#8220;%s&#8221;" | translate | format(group.name | fix) }}{% endblock %}

{% block content %}
<h1>{{ "Editing Group &#8220;%s&#8221;" | translate | format(group.name | fix) }}</h1>
<form id="group_edit" class="split{{ group.id == visitor.group.id ? ' confirm' : '' }}" action="{{ admin_url('update_group') }}" method="post" accept-charset="UTF-8" enctype="multipart/form-data">
<fieldset>
<p>
<label for="name">{{ "Name" | translate }}</label>
<input class="text" type="text" name="name" value="{{ group.name | fix(true) }}" id="name">
</p>
<h2>{{ "Permissions" | translate }}</h2>
<p id="toggler">
</p>
<hr>
{% for permission in permissions %}
<p>
<label for="permission_{{ permission.id }}">{{ permission.name | translate_search }}</label>
<input class="checkbox" type="checkbox" name="permissions[{{ permission.id }}]" id="permission_{{ permission.id }}"{{ group.can(permission.id) | checked }}>
</p>
{% endfor %}
<p class="buttons">
<button type="submit" class="yay"><img src="{{ site.chyrp_url }}/admin/images/icons/success.svg" alt="icon">{{ "Update" | translate }}</button>
</p>
<input type="hidden" name="id" value="{{ group.id }}" id="id">
<input type="hidden" name="hash" value="{{ ip | token }}" id="hash">
</fieldset>
</form>
{% endblock %}
