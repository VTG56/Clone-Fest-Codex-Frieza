{% extends "layout.twig" %}

{% block title %}{{ "Edit User &#8220;%s&#8221;" | translate | format(user.login | fix) }}{% endblock %}

{% block content %}
<h1>{{ "Editing User &#8220;%s&#8221;" | translate | format(user.login | fix) }}</h1>
<form id="user_edit" class="split" action="{{ admin_url('update_user') }}" method="post" accept-charset="UTF-8" enctype="multipart/form-data">
<fieldset>
<p>
<label for="full_name">{{ "Full Name" | translate }}</label>
<input class="text" type="text" name="full_name" value="{{ user.full_name | fix(true) }}" id="full_name">
</p>
<p>
<label for="email">{{ "Email" | translate }}</label>
<input class="text" type="email" name="email" value="{{ user.email | fix(true) }}" id="email">
</p>
<p>
<label for="website">{{ "Website" | translate }}</label>
<input class="text" type="url" name="website" value="{{ user.website | fix(true) }}" id="website">
</p>
<p>
<label for="login">{{ "Login" | translate }}</label>
<input class="text" type="text" name="login" value="{{ user.login | fix(true) }}" id="full_name">
</p>
<p>
<label for="group">{{ "Group" | translate }}</label>
<select name="group" id="group">
{% for group in groups %}
<option value="{{ group.id }}"{{ group.id | selected(user.group_id) }}>{{ group.name }}</option>
{% endfor %}
</select>
</p>
<p>
<label for="new_password1">{{ "New Password?" | translate }}</label>
<input class="text" type="password" name="new_password1" value="" id="new_password1">
</p>
<p>
<label for="new_password2">{{ "Confirm" | translate }}</label>
<input class="text" type="password" name="new_password2" value="" id="new_password2">
</p>
{{ trigger.call("edit_user_fields", user) }}
<p class="buttons">
<button type="submit" class="yay"><img src="{{ site.chyrp_url }}/admin/images/icons/success.svg" alt="icon">{{ "Update" | translate }}</button>
</p>
<input type="hidden" name="id" value="{{ user.id }}" id="id">
<input type="hidden" name="hash" value="{{ ip | token }}" id="hash">
</fieldset>
</form>
{% endblock %}
