{% extends "layout.twig" %}

{% block title %}{{ "Delete Comment?" | translate("comments") }}{% endblock %}

{% block content %}
<h1>{{ "Delete Comment?" | translate("comments") }}</h1>
<p>
{{ "Are you sure you want to delete this comment?" | translate("comments") }}
</p>
<form class="delete" action="{{ admin_url('destroy_comment') }}" method="post" accept-charset="UTF-8">
<fieldset>
<div class="confirmation">
<button name="destroy" value="indubitably" class="boo">
<img src="{{ site.chyrp_url }}/admin/images/icons/delete.svg" alt="icon">{{ "Delete!" | translate }}
</button>
<button name="destroy" value="undecidedly" type="submit" class="yay">
<img src="{{ site.chyrp_url }}/admin/images/icons/cancel.svg" alt="icon">{{ "Cancel" | translate }}
</button>
</div>
<input type="hidden" name="id" value="{{ comment.id }}" id="id">
<input type="hidden" name="hash" value="{{ ip | token }}" id="hash">
</fieldset>
</form>
{% endblock %}
