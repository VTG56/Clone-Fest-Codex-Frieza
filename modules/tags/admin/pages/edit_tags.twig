{% extends "layout.twig" %}

{% block title %}{{ "Edit Tags for &#8220;%s&#8221;" | translate("tags") | format(post.title | striptags | oneof("[Untitled]" | translate)) }}{% endblock %}

{% block content %}
<h2>{{ "Edit Tags for &#8220;%s&#8221;" | translate("tags") | format(post.title | striptags | oneof("[Untitled]" | translate)) }}</h2>
<form class="split" action="{{ admin_url('update_tags') }}" method="post" accept-charset="UTF-8">
<fieldset>
<p>
<label for="name">{{ "Tags" | translate("tags") }}</label>
<input type="text" name="tags" value="{{ post.tags | keys | join(", ") | fix(true) }}" id="tags">
</p>
<p class="buttons">
<button type="submit" class="yay">
<img src="{{ site.chyrp_url }}/admin/images/icons/success.svg" alt="icon"> {{ "Update" | translate }}
</button>
</p>
<input type="hidden" name="hash" value="{{ ip | token }}" id="hash">
<input type="hidden" name="id" value="{{ post.id }}" id="clean">
</fieldset>
</form>
{% endblock %}
