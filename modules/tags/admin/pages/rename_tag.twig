{% extends "layout.twig" %}

{% block title %}{{ "Rename Tag &#8220;%s&#8221;" | translate("tags") | format(tag.name | striptags) }}{% endblock %}

{% block content %}
<h2>{{ "Rename Tag &#8220;%s&#8221;" | translate("tags") | format(tag.name | striptags) }}</h2>
<form class="split" action="{{ admin_url('update_tag') }}" method="post" accept-charset="UTF-8">
<fieldset>
<p>
<label for="name">{{ "Name" | translate("tags") }}</label>
<input type="text" name="name" value="{{ tag.name | fix(true) }}" id="name">
</p>
<p class="buttons">
<button type="submit" class="yay">
<img src="{{ site.chyrp_url }}/admin/images/icons/success.svg" alt="icon"> {{ "Rename" | translate("tags") }}
</button>
</p>
<input type="hidden" name="hash" value="{{ ip | token }}" id="hash">
<input type="hidden" name="original" value="{{ tag.name | fix(true) }}" id="original">
</fieldset>
</form>
{% endblock %}
